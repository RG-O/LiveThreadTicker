{
  "content_scripts": [
    {
      "all_frames": true,
      "js": [ "js/initiate-ticker.js", "js/html-generator.js", "js/comment-fetcher.js" ],
      "css": [ "css/ticker.css" ],
      "matches": [ "http://*/*", "https://*/*" ],
      "run_at": "document_idle"
    }
  ],
  "description": "Live Thread Ticker (LTT) adds a ticker to videos to display live comments from threads",
  "icons": {
    "128": "icon128.png"
  },
  "manifest_version": 3,
  "name": "Reddit Live Thread Ticker - Game thread comments directly on the game",
  "permissions": [ "storage", "activeTab" ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon128.png",
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png"
    }
  },
  "version": "1.9"
}
